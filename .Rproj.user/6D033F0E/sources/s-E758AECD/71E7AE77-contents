

```{r pressure, echo=FALSE}
library(ggplot2)
library(plotly)
library(scales)

eq <-  function(x) { 1/((0.7843011 + log(x)*0.2366951)^5) }

int_1 <- ggplot(data.frame(x=c(1, 1000)), aes(x=x)) + 
  stat_function(fun=eq) +
  labs(x = "Quantity",
       y = "Price",
       title = "Price-Quantity function",
       caption = "Quantity between 1 and 1'000")+
  scale_x_continuous(labels = number)+
  scale_y_continuous(labels = number)+
  theme_light()


int_2 <- ggplot(data.frame(y=c(0, 1), x=c(1000, 1000000)), aes(x=x)) + 
  stat_function(fun=eq) +
  labs(x = "Quantity",
       y = "Price",
       title = "Price-Quantity function",
       caption = "Quantity between 1'000 and 1'000'0000")+
  scale_x_continuous(labels = number)+
  scale_y_continuous(labels = number) +
  theme_light()

int_3 <- ggplot(data.frame(y=c(0, 1),x = c(1000000,10000000)), aes(x=x)) + 
  stat_function(fun=eq)+
  labs(x = "Quantity",
       y = "Price",
       title = "Price-Quantity function",
       caption = "Quantity between 1'000'0000 and 10'000'0000")+
scale_x_continuous(labels = number)+
scale_y_continuous(labels = number)+
  theme_light()

ggplotly(int_1)
ggplotly(int_2)
ggplotly(int_3)

```
